{
	"compilerOptions": {
		"lib": ["deno.ns",   "deno", "dom"],
		"strict": true
	},
	"tasks": {
		"fmt": "deno fmt --watch *",
		"test": "deno test --allow-read --allow-write --allow-env --allow-run --allow-net --no-check"
	},
	"unstable": ["bare-node-builtins"],

	"imports": {
		"@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.8",
		"@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
		"@cliffy/keycode": "jsr:@cliffy/keycode@^1.0.0-rc.8",
		"@cliffy/keypress": "jsr:@cliffy/keypress@^1.0.0-rc.8",
		"@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
		"@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
		"@luxass/zod-error-utils": "jsr:@luxass/zod-error-utils@^0.3.0",
		"@std/assert": "jsr:@std/assert@^1.0.11",
		"@std/cli": "jsr:@std/cli@^1.0.16",
		"@std/io": "jsr:@std/io@^0.225.2",
		"@std/path": "jsr:@std/path@^1.0.9",
		"@std/semver": "jsr:@std/semver@^1.0.5",
		"@std/testing": "jsr:@std/testing@^1.0.10",
		"axios": "npm:axios@^1.9.0",
		"csv": "npm:csv@^6.3.11",
		"csv-stringify": "npm:csv-stringify@^6.5.2",
		"form-data": "npm:form-data@^4.0.2",
		"zod": "npm:zod@^3.24.3"
	},
	"fmt": {
		"lineWidth": 200,
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true
	} 
 }
